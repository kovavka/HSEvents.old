@model Domain.User
@{
    ViewBag.Title = "Выполнить вход";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br>
    <h4 align="center">Используйте локальную учетную запись для входа</h4>
    <h6> логин - demo, пароль - 1234, администратор</h6>
    <h6> логин - test, пароль - 1234, пользователь</h6>

    <hr>
        <div class="form-group">
            @Html.Label("Логин")
            <br />
            @Html.TextBoxFor(model => model.Login, new { @class = "form-control topmargin" })
            @Html.ValidationMessage("Login", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Пароль")
            <br />
            @Html.PasswordFor(model => model.Password, new { @class = "form-control topmargin" })
            @Html.ValidationMessage("Password", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBox("RememberMe")
                    @Html.Label("Запомнить меня")
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessage("Button", new { @class = "text-danger" })

        <div class="form-group">
            <div width="120%">
                <input type="submit" value="Войти" class="btn btn-default form-control " />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                @Html.ActionLink("Зарегистрироваться", "Register")
            </div>
        </div>



        @* Включите, когда будет включено подтверждение учетной записи для функции сброса пароля
            <p>
                @Html.ActionLink("Забыли пароль?", "ForgotPassword")
            </p>*@
}