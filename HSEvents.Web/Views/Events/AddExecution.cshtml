<div class="modal-content" >
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Проведение мероприятия</h4>
    </div>
    <div class="modal-body">
    
        <div class="col-lg-12">
            @Html.Label("Адрес", new { @class = "control-label" })
            <br />
            @Html.DropDownList("Address", (IEnumerable<SelectListItem>)ViewData["Addresses"], new { @class = "form-control" })
            
            
    
            @Html.ValidationMessage("cityType", new { @class = "text-danger" })
            <br />
    
        </div>
        
    
        @Html.Label("Проведение мероприятия", new { @class = "control-label" })
        
        <br/>
        @Html.Label("Дата", new { @class = "control-label" })
        @Html.TextBox("Date", "12.12.2015", new { @class = "form-control" })
        

        @Html.Label("Время начала", new { @class = "control-label" })
        @Html.TextBox("Start", "12:12", new { @class = "form-control" })

        
        @Html.Label("Время окончания", new { @class = "control-label" })
        @Html.TextBox("End", "12:13", new { @class = "form-control" })

        <input type="button" class="btn btn-default" value="Добавить" onclick="addDate()" />

        
        <table id="dates" class="calendar">
            <thead>
            <tr>
                <th>Дата</th>
                <th>Время начала</th>
                <th>Время окончания</th>
            </tr>
            </thead>

            <tbody id="datesBody">
            </tbody>
        </table>
        
        <br/>

            <div class="col-md-6">
                <input type="button" class="btn btn-default" style="width: 73%" value="Сохранить" onclick='saveExecution()'/>
            </div>
      
        <br/>

    </div>
</div>