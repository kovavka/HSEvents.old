
<div class="modal-content" >
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Тип школы</h4>
    </div>
<div class="modal-body">
    

    <div class="col-lg-12">
        @Html.Label("Название", new { @class = "control-label" })
        <br />
        @Html.TextBox("name", "", new { @class = "form-control", @style = "max-width:677px" })
        @Html.ValidationMessage("name", new { @class = "text-danger" })
    </div>

    <br />

    <div class="form-group">
        <row>
            <div class="col-md-6">
                <input type="button" class="btn btn-default" style="width: 73%" value="Сохранить" onclick='save("SchoolType")' />
            </div>
            <div class="col-md-6">
                <input type="button" class="btn btn-default" style="width: 73%" value="Удалить" onclick="remove()" />
            </div>
        </row>
    </div>
    <br/>

    </div>
</div>