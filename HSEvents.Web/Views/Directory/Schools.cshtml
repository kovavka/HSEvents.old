
<div class="modal-content" >
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Школа</h4>
    </div>
<div class="modal-body">
    

    <div class="col-lg-12">
        @Html.Label("Полное наименование", new { @class = "control-label" })
        <br />
        @Html.TextBox("schoolName", "", new { @class = "form-control", @style = "max-width:677px" })
        @Html.ValidationMessage("schoolName", new { @class = "text-danger" })
    </div>
    
<div class="col-lg-12">
    @Html.Label("Адрес", new { @class = "control-label" })
    <br />
    @Html.DropDownList("cityType", (IEnumerable<SelectListItem>)ViewData["Address"], new { @class = "form-control", @style = "max-width:677px" })
    @Html.ValidationMessage("cityType", new { @class = "text-danger" })
</div>

    <div class="form-group">
        <row>
            <div class="col-md-6">
                <input type="button" class="btn btn-default" style="width: 73%" value="Сохранить" onclick="save()" />
            </div>
            <div class="col-md-6">
                <input type="button" class="btn btn-default" style="width: 73%" value="Удалить" onclick="remove()" />
            </div>
        </row>
    </div>
    <br/>

    </div>
</div>
