@model Domain.Events.Department
@{
    var edit = (bool)ViewBag.Edit;
}
@section Scripts {
    <script src="@Url.Content("~/Scripts/Views/removed.js")"></script>
}
<h4>Подразделение</h4>

@using (Html.BeginForm("Department", "Directory", FormMethod.Post, new { role = "form" }))
{
<div class="col-lg-12">
    @Html.Label("Название", new { @class = "control-label" })
    <br />
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "max-width:677px" })
    @Html.ValidationMessage("Name", new { @class = "text-danger" })
</div>

<br />

<div class="col-lg-12">
    @Html.Label("Цвет", new { @class = "control-label" })
    <br />
    @Html.TextBoxFor(x => x.Color, new { @class = "form-control", @style = "max-width:677px" })
    @Html.ValidationMessage("Color", new { @class = "text-danger" })
</div>

<br />

    <div class="form-group">
        <row>
            <div class="col-md-6">
                <input type="submit" class="btn btn-default" style="width: 73%" value="Сохранить" />
            </div>
            @if (edit)
            {
                <div class="col-md-6">
                    <input type="button" class="btn btn-default" style="width: 73%" value="Удалить" onclick="remove('Department', @Model.Id)" />
                </div>
            }
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @style = "visibility:hidden" })
        </row>
    </div>
}  