@model HSEvents.Web.Views.SchoolDto
@{
    var edit = (bool)ViewBag.Edit;
}
@section Scripts {
    <script src="@Url.Content("~/Scripts/Views/removed.js")"></script>
}
<h4>Школа</h4>

@using (Html.BeginForm("School", "Directory", FormMethod.Post, new { role = "form" }))
{ 
    <div class="col-lg-12">
    @Html.Label("Полное наименование", new { @class = "control-label" })
    <br />
    @Html.TextBoxFor( x=>x.Name, new { @class = "form-control", @style = "max-width:677px" })
    @Html.ValidationMessage("Name", new { @class = "text-danger" })
</div>
    
    <div class="col-lg-12">
        @Html.Label("Адрес", new { @class = "control-label" })
        <br />
    
   
        @Html.DropDownListFor(x => x.Address,(IEnumerable<SelectListItem>)ViewData["Address"], new { @class = "form-control", @style = "max-width:677px" })


    
        @Html.ValidationMessage("Address", new { @class = "text-danger" })
        <br />
    
    </div>

      
    <div class="col-lg-12">
        @Html.Label("Тип школы", new { @class = "control-label" })
        <br />
    
   
        @Html.DropDownListFor(x => x.Type, (IEnumerable<SelectListItem>)ViewData["Type"], new { @class = "form-control", @style = "max-width:677px" })


    
        @Html.ValidationMessage("Type", new { @class = "text-danger" })
        <br />
    
    </div>

    <div class="form-group">
        <row>
            <div class="col-md-6">
                <input type="submit" class="btn btn-default" style="width: 73%" value="Сохранить" />
            </div>
            @if (edit)
            {
                <div class="col-md-6">
                    <input type="button" class="btn btn-default" style="width: 73%" value="Удалить" onclick="remove('School', @Model.Id)"/>
                </div>
            }
            @Html.LabelFor(x=>x.Id, new { @class = "form-control", @style = "visibility:hidden" })
        </row>
    </div>
}  